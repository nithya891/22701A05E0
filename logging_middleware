
from fastapi import FastAPI, Request
import time
app = FastAPI()
@app.middleware("http")
async def log_requests(request: Request, call_next):
    start_time = time.time()
    response = await call_next(request)
    duration = time.time() - start_time
    with open("logs.txt", "a") as f:
        f.write(f"{request.method} {request.url.path} -> {response.status_code} in {duration:.2f}s\n")
    return response
@app.get("/")
def home():
    return {"message": "Logging Middleware is active!"}
